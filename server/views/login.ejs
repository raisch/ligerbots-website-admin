<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Login</h1>
</div>

<% messages.forEach(element => { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= element %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% }) %>

<div class="error" style="background-color: red;color:white"></div>
<br/>
<form id="login">
  <table>
    <tr><td><label for="username">Username</label></td><td><input type="string" id="username" name="username" required/></td></tr>
    <tr><td><label for="password">Password</label></td><td><input type="string" id="password" name="password" required/></td></tr>
    <tr><td>&nbsp;</td></tr>
    <tr><td>&nbsp;</td><td><button type="submit">Submit</button></td></tr>
  </table>
</form>

<script>
  const form = document.querySelector('#login')
  const username = document.querySelector('#username')
  const password = document.querySelector('#password')
  const display = document.querySelector('.error')

  form.addEventListener('submit', async (e) => {
    e.preventDefault()
    display.textContent = ''
    try {
      const res = await fetch('/api/auth/login', {
        method: 'POST',
        body: JSON.stringify({ username: username.value, password: password.value }),
        headers: { 'Content-Type': 'application/json' }
      })

      const data = await res.json()

      // console.log(JSON.stringify(data))

      if (res.status === 400 || res.status === 401) {
         display.textContent = `${data.message}. ${data.error ? data.error : ''}`
        return
      }

      if(data.role === 'admin') {
        console.log('admin found - redirecting to /')
        location.assign('/')
      }
    } catch (err) {
      console.log(err.message)
    }
    return false
  })
</script>

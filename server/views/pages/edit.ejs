<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Editing: <%= page.path %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button type="button" class="btn btn-sm btn-outline-secondary">
        Share
      </button>
      <button type="button" class="btn btn-sm btn-outline-secondary">
        Export
      </button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/">Dashboard</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/pages">Pages</a>
          </li>
          <li class="breadcrumb-item active"><%= page.path %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      Last Updated <%= new Date(page.updatedAt).toUTCString() %>
      <br />
      PageId: <strong><%= page._id %></strong>
    </div>
  </div>
</div>

<form action="/pages/<%= page._id %>?_method=PUT" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="firstName">Path</label>
      <input
        type="text"
        class="form-control"
        id="path"
        name="path"
        value="<%= page.path %>"
        placeholder="Page Path"
        required
      />
    </div>

    <div class="col">
      <label for="author">Author</label>
      <input
        type="text"
        class="form-control"
        id="author"
        name="author"
        value="<%= page.author %>"
        placeholder="Page Author"
        required
      />
    </div>
  </div>

  <div class="form-group mb-4">
    <label for="content">Content</label>
    <textarea
      class="form-control"
      name="content"
      id="content"
      cols="30"
      rows="12"
      placeholder="Page Content"
    ></textarea>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update Page</button>

    <button
      type="button"
      class="btn btn-danger"
      data-bs-toggle="modal"
      id="deleteButton"
      data-bs-target="#deleteModal"
    >
      Delete Page
    </button>
  </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a page.</div>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the page at
          <b class="fw-bold"><%= page.path %></b><br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <form
          action="/pages/<%= page._id %>?_method=DELETE"
          method="POST"
          class="position-relative"
        >
          <button type="submit" class="btn btn-primary">
            Yes, Remove Page
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>

<script>
  var simplemde = new SimpleMDE({
    element: document.getElementById("content"),
  });
  simplemde.value(`<%= page.content %>`);
</script>
